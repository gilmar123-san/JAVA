package account;

//importando a classe joptionpane para criar caixas de dialogos.
import javax.swing.JOptionPane;


public class AccountTestes {

	public static void main(String[] args) {	
		
		Account conta = new Account("",0.0);
	
		//Solicitando o nome:
		String recebeNome = JOptionPane.showInputDialog(null,"Por favor, insira seu nome: ");
		conta.setNome(recebeNome);//passando o parametro recebido anteriormente na classe Account,mna varíavel de instância nome
			
		//solicitando o valor do deposito.
		String deposito = JOptionPane.showInputDialog(null,"Informe o valor do depósito:");//cria uma varíavel que recebe um valor e vira parametro posteriormente
		double depositoConvertido = Double.parseDouble(deposito);
		conta.setBalance(depositoConvertido);//passando o parametro recebido anteriormente na classe Account,mna varíavel de instância nome
				
		//Exibe o nome armazenado no objeto myAccount
		String mensagem = String.format("Dono da conta: %sSaldo: %.2f ", conta.getNome(), conta.getBalance());
		
		JOptionPane.showMessageDialog(null, mensagem);
		
		String saque = JOptionPane.showInputDialog(null,"Informe o valor do saque:");
		
		double saqueConvertido = Double.parseDouble(deposito);
		
	}

}

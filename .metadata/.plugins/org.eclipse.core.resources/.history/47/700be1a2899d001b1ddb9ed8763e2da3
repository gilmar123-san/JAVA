package account;

//importando a classe joptionpane para criar caixas de dialogos.
import javax.swing.JOptionPane;


public class AccountTestes {

	public static void main(String[] args) {	
		
		Account conta = new Account("",0.0);
	
		//Solicitando o nome:
		String recebeNome = JOptionPane.showInputDialog(null,"Por favor, insira seu nome: ");
		//String nome = entrada.nextLine();//cria uma varíavel que recebe um valor e vira parametro posteriormente
		conta.setNome(recebeNome);//passando o parametro recebido anteriormente na classe Account,mna varíavel de instância nome
		
		conta.setNome(recebeNome);
		
		System.out.println();//Imprime uma linha em brano
		
		//solicitando o valor do deposito.
		System.out.print("Por favor, insira o valor do deposito: ");
		String deposito = JOptionPane.showInputDialog(null,"");//cria uma varíavel que recebe um valor e vira parametro posteriormente
		double depositoConvertido = Double.parseDouble(deposito);
		conta.setBalance(depositoConvertido);//passando o parametro recebido anteriormente na classe Account,mna varíavel de instância nome
		
		System.out.println();//Imprime uma linha em brano
		
		//Exibe o nome armazenado no objeto myAccount
		String mensgem = String.format("Dono da conta: %s%nSaldo: %.2f ", conta.getNome(), conta.getBalance());
		
		
		
		JOptionPane.showMessageDialog(null, "Dono da conta");
		
		
		
	}

}

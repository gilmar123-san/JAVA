import javax.swing.JOptionPane;

public class Date {
	private long mes;
	private long dia;
	private long ano;
	
	public Date() {
		this.mes = 0;
		this.dia = 0;
		this.ano = 0;
	}

	public long getMes() {
		return mes;
	}

	public void setMes(int mes) {
		this.mes = mes;
	}

	public long getDia() {
		return dia;
	}

	public void setDia(long dia) {
		this.dia = dia;
	}

	public long getAno() {
		return ano;
	}

	public void setAno(long ano) {
		this.ano = ano;
	}
	
	public String displayDate() {
		
		String mensagem = String.format("/&d/%d/%d", this.dia, this.mes, this.ano);
		
		return mensagem;
		
	}
	
}

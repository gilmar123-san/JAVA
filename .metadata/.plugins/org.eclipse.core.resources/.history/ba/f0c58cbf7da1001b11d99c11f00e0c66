public class HeartRates {

	private String nome;
	private String sobrenome;
	private int dia;
	private int mes;
	private int anonNsc;
	private int anoAtual;
	private int frequenciaMaxima;
	
	public HeartRates(String nome, String sobrenome, int dia, int mes, int anonNsc, int anoAtual, int frequenciaMaxima) {
		this.nome = nome;
		this.sobrenome = sobrenome;
		this.dia = dia;
		this.mes = mes;
		this.anonNsc = anonNsc;
		this.anoAtual = anoAtual;
		this.frequenciaMaxima = frequenciaMaxima;
	}

	public String getNome() {
		return nome;
	}

	public void setNome(String nome) {
		this.nome = nome;
	}

	public String getSobrenome() {
		return sobrenome;
	}

	public void setSobrenome(String sobrenome) {
		this.sobrenome = sobrenome;
	}

	public int getDia() {
		return dia;
	}

	public void setDia(int dia) {
		this.dia = dia;
	}

	public int getMes() {
		return mes;
	}

	public void setMes(int mes) {
		this.mes = mes;
	}

	public int getAno() {
		return anonNsc;
	}

	public void setAno(int anonNsc) {
		this.anonNsc = anonNsc;
	}
	
	public int getAnoAtual() {
		return anoAtual;
	}

	public void setAnoAtual(int anoAtual) {
		this.anoAtual = anoAtual;
	}
	
	public String calcularIdade() {
		int idade = (this.anoAtual - this.anonNsc);
		
		String dataNacimento = String.format("%d anos",idade);
		
		return dataNacimento;
	}
	
	public int getCalculaFrequenciaMaxima() {
		return this.frequenciaMaxima;
	}
		
	public void calculaFrequenciaMaxima() {
		
		if(anoAtual == 0) {
			System.out.println("Ano atual vazio!");
		}else {
			this.frequenciaMaxima = (220 - this.anoAtual);
		}
		
	}
	
	
	
}
